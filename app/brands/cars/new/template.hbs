<div class="section">
  <div class="container">

  <div class="card card--upper">
    <div class="card__heading">
      <h2>Add a New Model</h2>
    </div>

    <div class="card__content">
      <form class="form" {{action "saveCar" on="submit"}}>
        <p class="form__control">
          {{input class="form__input" type="text" placeholder="Model Name" value=formValues.name}}
        </p>

        <p class="form__control">
          {{input class="form__input" type="text" placeholder="Horse Power" value=formValues.hp}}
        </p>

        <p class="form__control">
          {{input class="form__input" type="text" placeholder="Year" value=formValues.year}}
        </p>

        <p class="form__control">
          {{input class="form__input" type="text" placeholder="Price" value=formValues.price}}
        </p>

        <p class="form__action">
          {{#link-to "brands.cars.index" class="button"}}Back{{/link-to}}
          <button class="button">Save Model</button>
        </p>
      </form>
    </div>
  </div>

  </div>
</div>
