<div class="section">
  <div class="container">

  <div class="card card--upper">
    <div class="card__heading">
      <h2>Add New Manufacturer</h2>
    </div>

    <div class="card__content">
      <form class="form" {{action "saveBrand" on="submit"}}>
        <p class="form__control">
          {{input class="form__input" type="text" placeholder="Company Name" value=formValues.name}}
        </p>

        <p class="form__control">
          {{input class="form__input" type="text" placeholder="ISO Country Code" value=formValues.country}}
        </p>

        <p class="form__action">
          {{#link-to "brand.index" class="button"}}Back{{/link-to}}
          <button class="button">Save Manufacturer</button>
        </p>
      </form>
    </div>
  </div>

  </div>
</div>
